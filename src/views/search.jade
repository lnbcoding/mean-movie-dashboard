extends layout

.container
    .search-bg
    block content
        h1 Da Movie Dashboard
    .search-box
        form(action="/movie/search", method="get")
            label Movie Title
            input(type="text", name="title", placeholder="A Beautiful Mind")
            label Year
            input(type="text", name="year", placeholder="2001")
            button Search for Movie
    .popular-movies-link
        a(href="/movies/popular") See the 15 Most Popular Movies

